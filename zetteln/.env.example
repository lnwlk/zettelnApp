# Notion Configuration
NOTION_TOKEN=your_notion_integration_token
NOTION_DATABASE_ID=your_notion_database_id

# Listmonk Configuration (Email Notifications)
# Base URL of your Listmonk instance (without trailing slash)
LISTMONK_URL=https://your-listmonk-instance.com

# Listmonk API credentials
LISTMONK_USERNAME=your_listmonk_username
LISTMONK_PASSWORD=your_listmonk_password

# Listmonk List ID - The list where survey respondents will be subscribed
# You can find this in Listmonk under Lists section
LISTMONK_LIST_ID=1

# Listmonk Template ID (Optional) - For sending transactional welcome emails
# You can create a template in Listmonk and use its ID here
# If not set, only subscription will happen without immediate email
LISTMONK_TEMPLATE_ID=1
